<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4D1D1"
    android:padding="16dp">

    <!-- עריכת שם הלוק -->
    <EditText
        android:id="@+id/etLookName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter look name"
        android:textSize="20sp"
        android:textColorHint="#A758B8"
        android:backgroundTint="#A7C5BD"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ספינר לחולצה -->
    <Spinner
        android:id="@+id/spinnerTops"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F4C6D7"
        app:layout_constraintTop_toBottomOf="@id/etLookName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- ספינר למכנסיים -->
    <Spinner
        android:id="@+id/spinnerBottoms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F4C6D7"
        app:layout_constraintTop_toBottomOf="@id/spinnerTops"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- ספינר לנעליים -->
    <Spinner
        android:id="@+id/spinnerShoes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F4C6D7"
        app:layout_constraintTop_toBottomOf="@id/spinnerBottoms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- כפתור שמירה -->
    <Button
        android:id="@+id/btnSaveLook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Look"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#F4C6D7"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerShoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- כפתור מחיקה -->
    <Button
        android:id="@+id/btnDeleteLook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Look"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#F68BA9"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnSaveLook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
