<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98C2DD"
    android:padding="16dp">

    <!-- כותרת -->
    <TextView
        android:id="@+id/tvLookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#A758B8"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true" />

    <!-- פרטי החולצה -->
    <TextView
        android:id="@+id/tvTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top: "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvLookName"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- פרטי המכנסיים -->
    <TextView
        android:id="@+id/tvBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom: "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTop"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- פרטי הנעליים -->
    <TextView
        android:id="@+id/tvShoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoes: "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvBottom"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- כפתור מחיקת לוק -->
    <Button
        android:id="@+id/btnDeleteLook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Look"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F4C6D7"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvShoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
