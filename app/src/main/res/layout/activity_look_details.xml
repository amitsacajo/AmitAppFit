<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98C2DD"
    android:padding="16dp">

    <!-- כותרת הלוק -->
    <TextView
        android:id="@+id/tvLookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Look Name"
        android:textColor="#A758B8"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp"/>

    <!-- פרטי החולצה -->
    <TextView
        android:id="@+id/tvTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLookName"
        android:layout_marginTop="40dp"/> <!-- הגדלתי את המרווח בין כותרת הלוק לחולצה -->

    <ImageView
        android:id="@+id/imgTop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@id/tvTop"
        app:layout_constraintTop_toTopOf="@id/tvTop"
        app:srcCompat="@drawable/hangerone"
        android:layout_marginStart="24dp"/> <!-- הוספתי מרווח בין התמונה לטקסט -->

    <!-- פרטי המכנסיים -->
    <TextView
        android:id="@+id/tvBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTop"
        android:layout_marginTop="48dp"/> <!-- הגדלתי את המרווח בין החולצה למכנסיים -->

    <ImageView
        android:id="@+id/imgBottom"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@id/tvBottom"
        app:layout_constraintTop_toTopOf="@id/tvBottom"
        app:srcCompat="@drawable/hangerone"
        android:layout_marginStart="24dp"/> <!-- הוספתי מרווח בין התמונה לטקסט -->

    <!-- פרטי הנעליים -->
    <TextView
        android:id="@+id/tvShoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoes: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBottom"
        android:layout_marginTop="48dp"/> <!-- הגדלתי את המרווח בין המכנסיים לנעליים -->

    <ImageView
        android:id="@+id/imgShoes"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@id/tvShoes"
        app:layout_constraintTop_toTopOf="@id/tvShoes"
        app:srcCompat="@drawable/hangerone"
        android:layout_marginStart="24dp"/> <!-- הוספתי מרווח בין התמונה לטקסט -->

    <!-- כפתור מחיקת לוק -->
    <Button
        android:id="@+id/btnDeleteLook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Look"
        app:layout_constraintTop_toBottomOf="@id/tvShoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"/> <!-- הגדלתי את המרווח בין הנעליים לכפתור מחיקת הלוק -->

</androidx.constraintlayout.widget.ConstraintLayout>
