<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98C2DD"
    android:id="@+id/main"
    android:padding="16dp">

    <!-- TextView להוראות -->
    <TextView
        android:id="@+id/tvCreateLook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your look!"
        android:textSize="25sp"
        android:textColor="#A758B8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <!-- EditText להקלדת שם הלוק -->
    <EditText
        android:id="@+id/etLookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Look Name"
        android:layout_below="@id/tvCreateLook"
        android:layout_marginTop="16dp" />

    <!-- Label לחולצה -->
    <TextView
        android:id="@+id/tvTops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/etLookName"
        android:layout_marginTop="16dp" />

    <!-- Spinner לחולצה -->
    <Spinner
        android:id="@+id/spinnerTops"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etLookName"
        android:layout_toEndOf="@id/tvTops"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true" />

    <!-- Label למכנסיים -->
    <TextView
        android:id="@+id/tvBottoms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/spinnerTops"
        android:layout_marginTop="16dp" />

    <!-- Spinner למכנסיים -->
    <Spinner
        android:id="@+id/spinnerBottoms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerTops"
        android:layout_toEndOf="@id/tvBottoms"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true" />

    <!-- Label לנעליים -->
    <TextView
        android:id="@+id/tvShoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoes:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/spinnerBottoms"
        android:layout_marginTop="16dp" />

    <!-- Spinner לנעליים -->
    <Spinner
        android:id="@+id/spinnerShoes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerBottoms"
        android:layout_toEndOf="@id/tvShoes"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true" />



    <!-- כפתור לשמירת הלוק -->
    <Button
        android:id="@+id/btnSaveLook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Look"
        android:backgroundTint="#A7C5BD"
        android:textColor="#FFFFFF"
        android:layout_below="@id/spinnerShoes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />
</RelativeLayout>
